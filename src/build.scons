Import('*')

def smart_concat(l1, l2):
    if l1 == None:
        return l2
    elif l2 == None:
        return l1
    else:
        return l1 + l2

files = Glob('*.cpp') + Glob('*/*.cpp') + Glob('*/*/*.cpp') + Glob('hash/*/*/*.cpp') + Glob('*/*.c')
files += Glob('hash/*/*.asm') + Glob('hash/*/*.c')
objs = env.Object(files, CPPPATH = smart_concat(['.'], env.get('CPPPATH')))

Return('objs')